    section#contactMe
      form.pure-g(method='post')
        .grid-6-12
          label Your Name
          .input-bg
            input(type='text')
          label Your Email Address
          .input-bg
            input(type='email')
          label Your Phone Number
          .input-bg
            input(type='tel')
        .grid-6-12
          label.message Your Message
          .textarea-bg
            textarea
