      section#portfolio
        h2 Portfolio
        div A
        div B
        div C
        div D
        div E
        div F


      section#skills
        h2 Skills
        //- create overlay
        mixin overlay
          .overlay
            - for (var val=1; val <= 10; val ++)
              .val(data-skill-level=val)=val
        //- the skill list
        .skill-bg
          +overlay
          .skill(data-skill='9') HTML5
        .skill-bg
          +overlay
          .skill(data-skill='9') CSS3
        .skill-bg
          +overlay
          .skill(data-skill='8') jQuery
        .skill-bg
          +overlay
          .skill(data-skill='7') JADE
        .skill-bg
          +overlay
          .skill(data-skill='8') SASS/SCSS
        .skill-bg
          +overlay
          .skill(data-skill='6') PHP
        .skill-bg
          +overlay
          .skill(data-skill='7') Photoshop
        .skill-bg
          +overlay
          .skill(data-skill='7') WordPress
        .skill-bg
          +overlay
          .skill(data-skill='8') as


      section#contactMe
        h2 Contact Me
        form.contact(method='post')
          .col
            label Your Name
            .input-bg
              input(type='text')
            label Your Email Address
            .input-bg
              input(type='email')
            label Your Phone Number
            .input-bg
              input(type='tel')
          .col
            label.message Your Message
            .textarea-bg
              textarea
            input.submit(type='submit',value='Send Message')

      footer
        a(href="#") designed by me
          
